@model DigitalWizardry.Dungeon.Models.DungeonViewModel

@{
    ViewData["Title"] = "Dungeon Generator";
}

<table>
	<tr>
		<td class="pad">
			<p>
				Maze Generator Demo
				<br>(Extended Version)
				<br>by <a target="_blank" href="http://www.digitalwizardry.ca">Digital Wizardry</a>
			</p>
			<p>
				<form action=""><input type="button" value="Create New Maze" onclick="Reset()"/></form>
			</p>
		</td>
		<td>
			<div id="grid" class="grid">
			@for(var y = 14; y >= 0; y--)
			{
				@for(var x = 0; x <= 14; x++)
				{
					@* Initialze grid with empty divs ready to take a tile name in the class *@
					var xs = x < 10 ? "0" + x.ToString() : x.ToString();
					var ys = y < 10 ? "0" + y.ToString() : y.ToString();
					var location = "g" + xs + "-" + ys;
					<div id="@location" class="tile @location"></div>
				}
			}
			</div>
		</td>
	</tr>
</table>

<!-- Keep this call to Reset() down here for proper spinner activation! -->
<script>Reset();</script>